@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Clinic Management Application</h1>
    <p class="lead">Manage your patients' data with ease.</p>
    
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Register</h3>
        <p>
           Register yourself if you are a new member of the clinic.
            You can select your roles from:
            <ol>
                <li>
                    Doctor
                </li>
                <li>
                    Secretary
                </li>
                <li>
                    Pharmacist
                </li>
            </ol>
        </p>
        @Html.ActionLink("Signup", "Signup", "Account", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-6">
        <h3>Login</h3>
        <p>
            Login to your account using your username and password..
            
        </p>
        @Html.ActionLink("Login", "Login", "Account" , null, new { @class = "btn btn-default" })
    </div>
</div>